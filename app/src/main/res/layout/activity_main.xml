<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/connect_dv_securly_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:text="Connect" />

    <Button
        android:id="@+id/visible_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:text="Visible" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="604dp"
        android:layout_below="@id/connect_dv_securly_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="69dp"
        android:background="#F5EEEE"
        android:paddingBottom="40dp">

        <TextView
            android:id="@+id/res_txt"
            android:layout_width="200dp "
            android:layout_height="40dp"
            android:layout_below="@id/radioGroup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="#73CFB5"
            android:inputType="numberDecimal"

            />


        <EditText
            android:id="@+id/fist_oprent_edit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="#EEEEF3"
            android:inputType="numberDecimal" />


        <EditText
            android:id="@+id/sec_oprent_edit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@id/fist_oprent_edit"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="#EEEEF3"
            android:inputType="numberDecimal" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="112dp"
            android:layout_height="131dp"
            android:layout_below="@id/sec_oprent_edit"
            android:layout_alignParentStart="true"

            android:layout_alignParentEnd="true"
            android:layout_marginStart="64dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="155dp">

            <RadioButton
                android:id="@+id/radioDiv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:text="/ "
                android:textSize="30dp" />

            <RadioButton
                android:id="@+id/radioMul"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:checked="false"
                android:text="x"
                android:textSize="30dp" />
        </RadioGroup>


        <Button
            android:id="@+id/requset_result_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radioGroup"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"

            android:layout_marginStart="197dp"

            android:layout_marginTop="-108dp"
            android:layout_marginEnd="47dp"
            android:text="="
            android:textSize="50sp" />


    </RelativeLayout>

</RelativeLayout>